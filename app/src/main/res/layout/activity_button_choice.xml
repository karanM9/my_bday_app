<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ButtonChoice"
    android:background="@drawable/app_background"
    android:paddingTop="35dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="233dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation2" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="80dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:src="@drawable/app_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="20dp">

            <Button
                android:id="@+id/messageButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/dark_purple"
                android:fontFamily="@font/allura"
                android:paddingVertical="10dp"
                android:text="Message"
                android:textSize="24dp"
                android:textStyle="bold"
                app:strokeColor="#EBEBEB"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/gallery1Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/purple"
                android:fontFamily="@font/allura"
                android:paddingVertical="10dp"
                android:text="Gallery 1"
                android:textSize="24dp"
                android:textStyle="bold"
                app:strokeColor="#FFFEFE"
                app:strokeWidth="2dp" />

            <Button
                android:id="@+id/gallery2Button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:backgroundTint="@color/peach"
                android:fontFamily="@font/allura"
                android:paddingVertical="10dp"
                android:text="Gallery 2"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold"
                app:strokeColor="#090808"
                app:strokeWidth="2dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="233dp"
        android:layout_height="208dp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/animation2" />

</LinearLayout>




